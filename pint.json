{
    "preset": "psr12",
    "exclude": [
        "storage"
    ],
    "rules": {
        "binary_operator_spaces": {
            "operators": {
                "=>": "align_single_space_minimal"
            }
        },
        "new_with_braces": {
            "anonymous_class": false
        },
        "array_syntax": {
            "syntax": "short"
        },
        "multiline_whitespace_before_semicolons": {
            "strategy": "no_multi_line"
        },
        "echo_tag_syntax": {
            "format": "short"
        },
        "trailing_comma_in_multiline": {
            "elements": [
                "arrays"
            ]
        },
        "no_unused_imports": true,
        "phpdoc_indent": true,
        "phpdoc_align": true,
        "phpdoc_order": true,
        "phpdoc_separation": true,
        "phpdoc_scalar": true,
        "phpdoc_trim": true,
        "single_quote": true,
        "ordered_imports": {
            "sort_algorithm": "alpha"
        }
    }
}
