{
    "name": "visavi/rotor",
    "description": "Rotor",
    "keywords": ["php cms", "wap cms", "mobile cms"],
    "homepage": "https://visavi.net",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Alexander Grigorev",
            "email": "admin@visavi.net",
            "homepage": "https://visavi.net"
        },
        {
            "name": "Rotor Community",
            "homepage": "https://github.com/visavi/rotor/graphs/contributors"
        }
    ],
    "require": {
        "php": "^7.3.0",
        "ext-fileinfo": "*",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "cbschuld/browser.php": "~1.9",
        "google/recaptcha": "~1.2",
        "gregwar/captcha": "^1.1",
        "illuminate/cache": "~8.9",
        "illuminate/database": "~8.9",
        "illuminate/filesystem": "~8.9",
        "illuminate/http": "~8.9",
        "illuminate/pagination": "~8.9",
        "illuminate/redis": "~8.9",
        "illuminate/translation": "~8.9",
        "illuminate/view": "~8.9",
        "intervention/image": "^2.5",
        "josegonzalez/dotenv": "^3.2",
        "nelexa/zip": "^3.3",
        "nikic/fast-route": "^1.3",
        "php-curl-class/php-curl-class": "^8.8",
        "php-di/php-di": "^6.2",
        "php-ffmpeg/php-ffmpeg": "~0.16",
        "robmorgan/phinx": "^0.12",
        "swiftmailer/swiftmailer": "~6.2",
        "visavi/cleanup": "^1.5",
        "visavi/crontask": "^1.2"
    },
    "require-dev": {
        "deployer/deployer": "^6.8",
        "filp/whoops": "^2.7",
        "phpunit/phpunit": "^9.4",
        "phpstan/phpstan": "^0.12",
        "php-coveralls/php-coveralls": "^2.4",
        "slevomat/coding-standard": "^6.4",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "phpstan": "phpstan analyse --no-progress -vvv",
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "@php rotor config:clear --ansi",
            "@php rotor route:clear --ansi"
        ],
        "post-create-project-cmd": [
            "@php rotor app:permission --ansi",
            "@php rotor key:generate --ansi"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Modules\\": "modules/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "9.0-dev"
        }
    },
    "config": {
        "platform": {
            "php": "7.3.0"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
